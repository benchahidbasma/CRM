{% extends 'base.html.twig' %}

{% block title %}Détails du Contact{% endblock %}

{% block body %}
    <h1>Détails du Contact</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ contact.city }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% for tag in contact.tags %}
                        <span class="badge bg-info text-dark">{{ tag.label }}</span>
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ contact.notes }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ contact.createdAt|date('d/m/Y H:i') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('contact_index') }}" class="btn btn-secondary">← Retour à la liste</a>
        <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-warning">Modifier</a>
        <a href="{{ path('contact_delete', {'id': contact.id}) }}" class="btn btn-danger"
           onclick="return confirm('Supprimer ce contact ?');">Supprimer</a>
    </div>
{% endblock %}
