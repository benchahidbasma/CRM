{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <h1>Liste des Clients</h1>

    <ul class="list-group mb-3">
        {% for customer in customers %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>{{ customer.customerName }}</strong><br>
                    <small class="text-muted">{{ customer.email }} | {{ customer.phone }}</small><br>
                    <small>{{ customer.city }}, {{ customer.country }}</small>
                </div>
                <div>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-sm btn-danger"
                       onclick="return confirm('Supprimer ce client ?');">Supprimer</a>
                </div>
            </li>
        {% else %}
            <li class="list-group-item text-center text-muted">Aucun client trouv√©</li>
        {% endfor %}
    </ul>

    <a href="{{ path('customer_new') }}" class="btn btn-success">+ Nouveau Client</a>
{% endblock %}
