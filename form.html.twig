{% extends 'base.html.twig' %}

{% block title %}Formulaire Contact{% endblock %}

{% block body %}
    <h1>{{ title|default('Nouveau Contact') }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name, 'Nom') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.phone, 'Téléphone') }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.city, 'Ville') }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.city) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.tags, 'Tags') }}
            {{ form_widget(form.tags, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
            {{ form_errors(form.tags) }}
        </div>

        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
{% endblock %}
